{
  "compilerOptions": {
    "target": "es5",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": false,
    "skipLibCheck": true,
    "module": "ES6",
    "lib": ["dom", "dom.iterable", "esnext"],
    "outDir": "dist",
    "sourceMap": true,
    "declaration": true,
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true
  },
  "include": ["."],
  "exclude": ["dist", "build", "node_modules", "**/*.spec.ts", "globals.d.ts"]
}
